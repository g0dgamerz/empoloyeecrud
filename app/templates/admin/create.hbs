{{page-title "Create"}}
<div class='container'>
  <form onsubmit={{action "createEmployee"}}>
    <h3>WelCome Please enter Employee Details </h3>
   <div class="input-group mb-3">
   <span class="input-group-text">Employee ID</span>
  <Input type="text" class="form-control" id="employeeID"  @value={{this.employeeID}} />
     <span class="input-group-text">National ID</span>
  <Input type="text" class="form-control" id="nationalIDNumber" @value={{this.nationalIDNumber}} />

  &nbsp;&nbsp;&nbsp;
  <span class="input-group-text">Employee Name</span>
  <Input type="text" class="form-control" id="employeeName" @value={{this.employeeName}}/>
  </div>
  <div class="input-group mb-3">
   <span class="input-group-text">Login ID</span>
  <Input type="text" class="form-control" id="loginID" @value={{this.loginID}}/>
  &nbsp;&nbsp;&nbsp;
  <span class="input-group-text">Job Title</span>
  <Input type="text" class="form-control" id="jobTitle" @value={{this.jobTitle}} />
  </div>
     <div class="input-group mb-3">
   <span class="input-group-text">Birth date</span>
  <Input type="text" class="form-control" id="birthDate" @value={{this.birthDate}}/>
  &nbsp;&nbsp;&nbsp;
  <span class="input-group-text">Marital Status</span>
  <Input type="text" class="form-control" id="maritalStatus" @value={{this.maritalStatus}}/>
  </div>
     <div class="input-group mb-3">
   <span class="input-group-text">Gender</span>
  <Input type="text" class="form-control" id="gender" @value={{this.gender}}/>
  <span class="input-group-text">Hire Date</span>
  <Input type="text" class="form-control" @value={{this.hireDate}} />
  </div>
     <div class="input-group mb-3">
   <span class="input-group-text">Vacation Hour</span>
  <Input type="text" class="form-control" @value={{this.vacationHours}} />
  &nbsp;&nbsp;&nbsp;
  <span class="input-group-text">Sick Leave Hour</span>
  <Input type="text" class="form-control" @value={{this.sickLeaveHours}} />
  </div>
     <div class="input-group mb-3">
   <span class="input-group-text">Row Guid</span>
  <Input type="text" class="form-control" @value={{this.rowGuid}} />
  &nbsp;&nbsp;&nbsp;
  <span class="input-group-text">Modified Date</span>
  <Input type="text" class="form-control" @value={{this.modifiedDate}} />
  </div>
  <button type="submit" class="btn btn-primary">Create Employee</button>
</form>
</div>
{{outlet}}